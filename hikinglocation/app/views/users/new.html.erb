<% if @user.errors.any? %>
    <div>
      <h2>Something went wrong with the registration</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg|%>
          <li><%= msg%></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div>
  <h1>Webb API</h1>
  <h2>Register</h2>
</div>

<%= link_to "Back", root_path %>
  <div>
    <%= form_for @user do | f |%>
        <p><%= f.label :username %></p>
        <p><%= f.text_field :username, placeholder: "Username" %></p>

        <p><%= f.label :email %></p>
        <p><%= f.email_field :email, placeholder: "Email" %></p>

        <p><%= f.label :password %></p>
        <p><%= f.password_field :password, placeholder: "Password" %></p>

        <p><%= f.label :password_confirmation %></p>
        <p><%= f.password_field :password_confirmation, placeholder: "Password confirmation" %></p>

        <p><%= f.submit "Register" %></p>
    <% end %>
  </div>